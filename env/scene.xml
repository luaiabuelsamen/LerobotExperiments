<mujoco model="so_arm100 scene">
  <include file="so_arm100.xml"/>

  <statistic center="0 -0.2 0.1" extent="0.4"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="140" elevation="-30"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    
    <!-- Task object materials -->
    <material name="table_mat" rgba="0.6 0.4 0.2 1"/>
    <material name="block_mat" rgba="0.8 0.2 0.2 1"/>
    <material name="box_mat" rgba="0.3 0.6 0.3 1"/>
    <material name="target_mat" rgba="0.2 0.2 0.8 0.3"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- Table -->
    <body name="table" pos="0 0 0">
      <geom name="table_top" type="box" size="0.3 0.4 0.02" pos="0 -0.15 0.07" material="table_mat" mass="10"/>
      <geom name="table_leg1" type="box" size="0.02 0.02 0.035" pos="0.26 -0.53 0.035" material="table_mat"/>
      <geom name="table_leg2" type="box" size="0.02 0.02 0.035" pos="-0.26 -0.53 0.035" material="table_mat"/>
      <geom name="table_leg3" type="box" size="0.02 0.02 0.035" pos="0.26 0.23 0.035" material="table_mat"/>
      <geom name="table_leg4" type="box" size="0.02 0.02 0.035" pos="-0.26 0.23 0.035" material="table_mat"/>
    </body>
    
    <!-- Red block to pick up -->
    <body name="block" pos="0.1 -0.25 0.115">
      <joint type="free"/>
      <geom name="block_geom" type="box" size="0.01 0.02 0.015" material="block_mat" mass="0.05" 
            friction="1 0.005 0.0001" solimp="0.9 0.95 0.001" solref="0.02 1"/>
      <site name="block_site" pos="0 0 0" size="0.005"/>
    </body>
    
    <!-- Green box (target container) -->
    <body name="box" pos="-0.1 -0.35 0.09">
      <!-- Bottom -->
      <geom name="box_bottom" type="box" size="0.06 0.06 0.005" pos="0 0 0" material="box_mat" mass="0.2"/>
      <!-- Walls -->
      <geom name="box_wall1" type="box" size="0.06 0.005 0.03" pos="0 0.055 0.025" material="box_mat"/>
      <geom name="box_wall2" type="box" size="0.06 0.005 0.03" pos="0 -0.055 0.025" material="box_mat"/>
      <geom name="box_wall3" type="box" size="0.005 0.05 0.03" pos="0.055 0 0.025" material="box_mat"/>
      <geom name="box_wall4" type="box" size="0.005 0.05 0.03" pos="-0.055 0 0.025" material="box_mat"/>
      <site name="box_center" pos="0 0 0.03" size="0.001" rgba="0 0 0 0"/>
    </body>
  </worldbody>
</mujoco>